<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_type_file" 
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/attactment_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image"
        android:text="title_text"
        android:textColor="#000000"
        android:layout_above="@+id/attactment_download_text"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/attactment_size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/attactment_name_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/attactment_name_text"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:textColor="#7D899D"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/attactment_download_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical"
        android:textColor="#0096FF"
        android:text="@string/download"
        android:background="@drawable/button"
        android:textSize="13sp" />

</RelativeLayout>